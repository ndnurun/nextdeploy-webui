<form {{action "authenticate" on="submit"}} class="form-horizontal">
  <legend>Please login</legend>
  <div class="form-group">
    <label class="control-label col-sm-2 simplify">Email Address</label>
    <div class="col-sm-3">
    {{input type="email" classNames="form-control" value=email placeholder="Email Address"}}
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2 simplify">Password</label>
    <div class="col-sm-3">
    {{input type="password" classNames="form-control" value=password placeholder="Password"}}
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2 col-xs-4">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    {{login-forgot email=email password=password}}
  </div>
</form>
